{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": [
      "@swc/jest",
      {
        "sourceMaps": true,
        "jsc": {
          "target": "es2021",
          "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
          },
          "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
          }
        }
      }
    ]
  }
}
